{
  "name": "microblog",
  "scripts": {
    "lint": "eslint src",
    "clean": "rm -rf dist && mkdir dist",
    "copy:server": "cp -R src/server dist/server",
    "copy": "npm run copy:server",
    "build:scss": "node-sass src/public/assets/scss/main.scss dist/public/assets/css/main.css",
    "build:public": "webpack && npm run build:scss",
    "build": "npm run clean && npm run copy && npm run build:public",
    "start": " npm run lint && npm run build && node dist/server/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackharley/microblog.git"
  },
  "author": "Zack Harley",
  "bugs": {
    "url": "https://github.com/zackharley/microblog/issues"
  },
  "homepage": "https://github.com/zackharley/microblog#readme",
  "dependencies": {
    "angular2": "^2.0.0-beta.17",
    "body-parser": "^1.15.2",
    "es6-promise": "^4.0.5",
    "es6-shim": "^0.35.1",
    "express": "^4.14.0",
    "mongoose": "^4.7.0",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.0-rc.4",
    "satellizer": "^0.15.5",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "eslint": "^3.10.2",
    "morgan": "^1.7.0",
    "node-sass": "^3.13.0",
    "script-loader": "^0.7.0",
    "webpack": "^1.13.3"
  },
  "engine": "node 6.9.1"
}
